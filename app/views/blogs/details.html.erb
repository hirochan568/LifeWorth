      <div class="col-lg-8">

        <!-- Title -->
        <div class="detail-title">
        <h1 class="mt-4"><%= @blog.title %></h1>
        </div>
        <!-- Author -->
        <p class="lead">
          by
          <%= link_to @blog.user.name, user_blog_path(@user) %>
        </p>
        <p><%= @blog.blog_comments.count %> comment</p><%= render 'blog_favorites/blog_favorite', blog: @blog %>

        <hr>

        <!-- Date/Time -->
        Posted on <%= @blog.created_at.strftime('%Y/%m/%d') %>  by <%= @blog.user.name %>
        <!--edit/delete-->
        <% if @blog.user == current_user %>
          <%= link_to 'Edit', edit_blog_path(@blog), class: "btn btn-sm btn-success edit_book" %>
          <%= link_to "Delete", blog_path(@blog), method: :delete, class: "btn btn-sm btn-danger destroy_book" %>
        <% end %>
        <hr>

        <!-- Preview Image -->
        <%= attachment_image_tag @blog, :image , ize: 'auto', alt: "" , class: "img-fluid rounded" %>

        <hr>

        <!-- Post Content -->
        <div class="detail-content">
        <p class="lead"><%= @blog.body %></p>
        </div>

        <!-- Comments Form -->
        <%= form_with(model:[@blog, @blog_comment], local: true) do |f| %>
        <div class="card my-4">
          <h5 class="card-header">Post a Comment:</h5>
          <div class="card-body">
            <form>
              <div class="form-group">
                <%= f.text_area :comment, rows:'3', class: "form-control", placeholder: "Please write your comment here" %>
              </div>
              <%= f.submit "Post", class: "btn btn-primary"  %>
            </form>
          </div>
        </div>
        <% end %>

