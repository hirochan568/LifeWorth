<div class="container">

    <!-- Jumbotron Header -->
  <header class="jumbotron my-4">
      <h1 class="display-3">Blog page by <%= @user.name %></h1>
      <p class="lead">Lorem ipsum dolor sit amet, consectetur adipisicing elit. Ipsa, ipsam, eligendi, in quo sunt possimus non incidunt odit vero aliquid similique quaerat nam nobis illo aspernatur vitae fugiat numquam repellat.</p>
      <%= link_to 'start a blog！', new_blog_path(current_user), class: "btn btn-primary btn-lg", role: '' %>
    </header>

  <div class="container">

    <div class="row">

          <!-- Blog Entries Column -->
          <div class="col-md-8">

            <h1 class="my-4">Blog Lists
              <small>by <%= @user.name %></small>
            </h1>


            <!-- Blog Post -->
            <% @blogs.each do |blog| %>
            <div class='blog-card'>
              <div class="card mb-4">
                <%= attachment_image_tag blog, :image , width: 'auto', height: 'auto',alt: "", class: "card-img-top"%>
                <div class="card-body">
                  <h4 class="card-title"><p><%= blog.id %>articles</p></h4>
                  <h2 class="card-title"><%= blog.title.truncate(35) %></h2>
                  <p class="card-text"><%= blog.body.truncate(200) %></p>
                  <%= link_to 'Read More →', blog_details_path(blog), class: "btn btn-primary", role: "" %>

                </div>
                <div class="card-footer text-muted">
                  Posted on <%= blog.created_at.strftime('%Y/%m/%d') %>  by <%= blog.user.name %>　　<%= blog.blog_comments.count %> comment 　 ♥<%= blog.blog_favorites.count %> Like
                  <div>
                  <% if blog.user == current_user %>
                    <%= link_to 'Edit', edit_blog_path(blog), class: "btn btn-sm btn-success edit_book" %>
                    <%= link_to "Delete", blog_path(blog), method: :delete, class: "btn btn-sm btn-danger destroy_book" %>
                  <% end %>
                  </div>
                </div>
              </div>
            </div>
            <% end %>
          </div>
    <!-- /.row -->

    </div>
  </div>
</div>