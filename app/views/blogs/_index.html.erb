<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th></th>
      <th>User</th>
      <th>Title</th>
      <th>Opinion</th>
      <th>Category</th>
      <th>Favorite</th>
      <th>Comment</th>
      <th>Created date</th>
      <th colspan="9"></th>
    </tr>
  </thead>
  <tbody>
    <% blogs.each do |blog| %>
      <tr>
        <td>
        </td>
        <td><%= link_to blog.user.name, user_blog_path(blog.user_id) %></td>
        <td><%= link_to blog_details_path(blog) do %>
          <%= blog.title.truncate(10) %>
          <% end %>
        </td>
        <td><%= blog.body.truncate(12) %></td>
        <td><%= blog.category.name %></td>
        <td><%= render 'blog_favorites/blog_favorite', blog: blog %></td>
        <td><%= blog.blog_comments.count %></td>
        <td> <%= blog.created_at.strftime('%Y/%m/%d') %></td>

      </tr>
    <% end %>
  </tbody>
</table>