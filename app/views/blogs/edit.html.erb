<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-8 px-5 px-sm-0">

      <div class=" mt-4 mb-5">
        <h4 class="px-3 font-weight-bold d-inline-block", style="background-color: #eaf4fc">BLOG EDIT</h4><br>
      </div>
      <%= render 'layouts/error_messages', model: @blog %>
      <%= form_with model: @blog, url: blog_path, local:true do |f| %>

      <div class="mb-3">
          <div class="title">
            <p>Category</p>
          </div>

          <div class="mb-3">
            <%= f.label :" ", class:"label" %>
            <%= f.collection_select :category_id, @categories, :id, :name, prompt: "-- Please select --", style:'width: 300px;' %>
          </div>
        </div>



        <div class="mb-3">
          <label  class="form-file">image</label>
          <%= f.attachment_field :image, class: "form-control" %>
        </div>

        <div class="mb-3">
          <label  class="form-label">title</label>
          <%= f.text_field :title, class: "form-control", placeholder: "Please enter a title" %>
        </div>

        <div class="mb-3">
          <label  class="form-label">content</label>
          <%= f.text_area :body, class:'form-control', placeholder: "Please enter a content", rows: "3" %>
        </div>

          <div class="mb-3">
            <%= f.submit :"Update", class:"btn btn-success btn-lg" %>
          </div>
        </div>
      <% end %>

    </div>
  </div>
</div>