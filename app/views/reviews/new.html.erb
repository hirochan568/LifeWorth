<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-8 px-5 px-sm-0">

      <div class=" mt-4 mb-5">
        <h4 class="px-3 font-weight-bold d-inline-block", style="background-color: #eaf4fc">Review new registration</h4><br>
      </div>
      <%= render 'layouts/error_messages', model: @review %>
      <%= form_with model: @review, url: reviews_path, local:true do |f| %>

      <div class="mb-3">
          <div class="title">
            <p>Category</p>
          </div>

          <div class="mb-3">
            <%= f.label :" ", class:"label" %>
            <%= f.collection_select :category_id, @categories, :id, :name, prompt: "-- 選択してください --", style:'width: 300px;' %>
          </div>
        </div>

        <div id="evaluate_stars">
          <label>Evaluation</label>
        </div>

        <div class="mb-3">
          <label  class="form-file">image</label>
          <%= f.attachment_field :image, class: "form-control" %>
        </div>

        <div class="mb-3">
          <label  class="form-label">title</label>
          <%= f.text_field :title, class: "form-control", placeholder: "Please enter a title" %>
        </div>

        <div class="mb-3">
          <label  class="form-label">content</label>
          <%= f.text_area :body, class:'form-control', placeholder: "Please enter a content", rows: "3" %>
        </div>

          <div class="mb-3">
            <%= f.submit :"Create", class:"btn btn-success btn-lg" %>
          </div>
        </div>
      <% end %>
      
      <!--評価画像のjavascript記載-->
      <script>
        $('#evaluate_stars').raty({
          starOn: "<%= asset_path('star-on.png') %>",
          starOff: "<%= asset_path('star-off.png') %>",
          starHalf: "<%= asset_path('star-half.png') %>",
          scoreName: 'review[evaluation]' //登録するモデル名とカラム名を記述
        });
      </script>

    </div>
  </div>
</div>