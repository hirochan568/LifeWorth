 <% if review.favorited_by?(current_user) %>
    <p>
      <%= link_to review_review_favorites_path(review), method: :delete, remote: true do %>
        ♥<%= review.review_favorites.count %> good
      <% end %>
    </p>
    <% else %>
    <p>
      <%= link_to review_review_favorites_path(review), method: :post, remote: true do %>
        ♡<%= review.review_favorites.count %> good
      <% end %>
    </p>
  <% end %>