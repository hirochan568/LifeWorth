<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-10 px-5 px-sm-0">

      <%= form_with model: @user, url: user_session_path, local: true do |f| %>
        <%= render "users/shared/error_messages", resource: resource %>
       <div class="d-inline-block m-5">
          <h4 class="px-3 font-weight-bold", style="background-color: #eaf4fc">Log In</h4>
        </div>
      <!--ログインフォーム-->
      <form class="row g-3">
        <div class="col-md-6">
          <label for="inputEmail" class="form-label">Email</label>
          <%= f.text_field :email, autofocus: true, autocomplete:"email", placeholder:"sample@example.com", class:'form form-control' %>
        </div>

        <div class="d-flex flex-row mt-1">
        <div class="col-6">
          <label for="inputPassword6" class="col-form-label">Password</label>
          <% if @minimum_password_length %>
          <% end %>
          <%= f.password_field :password, autofocus: true, autocomplete:"new-password", class:'form form-control' %>
          <span id="passwordHelpInline" class="form-text">
            Must be 6-20 characters long.
          </span>
          <% if devise_mapping.rememberable? %>
            <div class="field">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          <% end %>
        </div></div>

        <div class="col-3">
           <%= f.submit "Sign in" ,class: '"btn btn-success btn-block btn-size"' %>
        </div>
      </form>

      <% end %>

      <div class="d-inline-block mx-3 mt-3 mb-2">
        <h4 class="px-3 font-weight-bold", style="background-color: #eaf4fc">Are you a user who has not yet registered?</h4>
      </div>
      <p>Please sign up from <%= link_to "here",new_user_registration_path, class:"mx-3 mt-3 mb-2" %></p>
      <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
      <%= link_to "Forgot your password?", new_password_path(resource_name) %><br />
      <% end %>

    </div>
  </div>
</div>
