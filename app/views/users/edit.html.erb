<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-10 px-5 px-sm-0">

      <%= form_with model: @user, url: user_path, local:true do |f| %>
        <%= render "users/shared/error_messages", resource: current_user %>
       <div class="d-inline-block m-5">
          <h4 class="px-3 font-weight-bold", style="background-color: #eaf4fc">Sign Up</h4>
        </div>
      <!--氏名入力フォーム-->
      <form class="row g-3">
        <div class="col-md-6">
          <label for="inputName" class="form-label">Name</label>
          <%= f.text_field :name, autofocus: true, autocomplete:"name", placeholder:"Taro Nihon", class:'form form-control' %>
        </div>
        <div class="col-md-6">
          <label for="inputNickname" class="form-label">Nickname</label>
          <%= f.text_field :nickname, autofocus: true, autocomplete:"nickname", placeholder:"example: taro", class:'form form-control' %>
        </div>

        <div class="col-md-6">
          <label for="inputTelephone" class="form-label">Telephone</label>
          <%= f.text_field :telephone, autofocus: true, autocomplete:"telephone", placeholder:"0000000000", class:'form form-control' %>
        </div>

        <div class="col-12">
          <label for="inputEmail" class="form-label">Email</label>
          <%= f.text_field :email, autofocus: true, autocomplete:"email", placeholder:"sample@example.com", class:'form form-control' %>
        </div>

        <div class="col-2">
           <%= f.submit "Update" ,class: '"btn btn-success btn-block btn-size"' %>
        </div>
      </form>

      <% end %>

    </div>
  </div>
</div>