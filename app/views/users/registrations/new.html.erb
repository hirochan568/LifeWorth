<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-10 px-5 px-sm-0">

      <h2>Sign up</h2>

      <%= form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user', local: true do |f| %>
        <%= render "users/shared/error_messages", resource: resource %>
       <div class="d-inline-block m-5">
          <h4 class="px-3 font-weight-bold", style="background-color: #eaf4fc">新規会員登録</h4>
        </div>
      <!--氏名入力フォーム-->
      <div class="d-flex flex-row mt-1">
        <div class="title">
        </div>

      <div class="d-flex ">
        <%= f.label :"名前", class:"label" %>
        <%= f.text_field :name, autofocus: true, autocomplete:"name", placeholder:"日本　太郎", class:'form form-control' %>
      </div>

      <div class="d-flex ">
        <%= f.label :"ニックネーム", class:"label" %>
        <%= f.text_field :nickname, autofocus: true, autocomplete:"nickname", placeholder:"taro", class:'form form-control' %>
      </div>
      </div>

      <div class="d-flex flex-row mt-1">
        <div class="title">
          <p>電話番号(ハイフンなし)</p>
        </div>

        <div class="d-flex ">
          <%= f.label :" ", class:"label" %>
          <%= f.text_field :telephone, autofocus: true, autocomplete:"telephone", placeholder:"0000000000", class:'form form-control' %>
        </div>
      </div>


        <div class="d-flex flex-row mt-1">
          <div class="title">
            <p>メールアドレス</p>
          </div>

          <div class="d-flex ">
            <%= f.label :" ", class:"label" %>
            <%= f.text_field :email, autofocus: true, autocomplete:"email", placeholder:"sample@example.com", class:'form form-control' %>
          </div>
        </div>

        <div class="d-flex flex-row mt-1">
          <div class="title">
            <p>パスワード(6文字以上)</p>
          </div>

          <div class="d-flex ">
            <%= f.label :" ", class:"label" %>
            <% if @minimum_password_length %>
            <% end %>
            <%= f.password_field :password, autofocus: true, autocomplete:"new-password", class:'form form-control' %>
          </div>
        </div>

        <div class="d-flex flex-row mt-1">
          <div class="title">
            <p>パスワード(確認用)</p>
          </div>

          <div class="d-flex ">
            <%= f.label :" ", class:"label" %>
            <%= f.password_field :password_confirmation, autofocus: true, autocomplete:"new-password", class:'form form-control' %>
          </div>
        </div>

        <div class="d-flex flex-row mt-1">
          <div class="title">
            <p></p>
          </div>

          <div class="d-flex">
            <%= f.label :" ", class:"label" %>
            <button type="submit" class="btn btn-success btn-block btn-size">新規登録</button>
          </div>
        </div>

        <% end %>

      <div class="d-inline-block mx-3 mt-3 mb-2">
        <h4 class="px-3 font-weight-bold", style="background-color: #eaf4fc">既に登録済みの⽅</h4>
      </div>
      <p><%= link_to "こちら", new_user_session_path, class:"mx-3 pl-5" %>からログインしてください。</p>
    </div>
  </div>
</div>