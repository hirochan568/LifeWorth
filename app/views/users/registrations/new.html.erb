<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-10 px-5 px-sm-0">

      <%= form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user', local: true do |f| %>
        <%= render "users/shared/error_messages", resource: resource %>
       <div class="d-inline-block m-5">
          <h4 class="px-3 font-weight-bold", style="background-color: #eaf4fc">Sign Up</h4>
        </div>
      <!--氏名入力フォーム-->
      <form class="row g-3">
        <div class="col-md-6">
          <label for="inputName" class="form-label">Name</label>
          <%= f.text_field :name, autofocus: true, autocomplete:"name", placeholder:"Taro Nihon", class:'form form-control' %>
        </div>
        <div class="col-md-6">
          <label for="inputNickname" class="form-label">Nickname</label>
          <%= f.text_field :nickname, autofocus: true, autocomplete:"nickname", placeholder:"taro", class:'form form-control' %>
        </div>

        <div class="col-12">
          <label for="inputTelephone" class="form-label">Telephone</label>
          <%= f.text_field :telephone, autofocus: true, autocomplete:"telephone", placeholder:"0000000000", class:'form form-control' %>
        </div>

        <div class="col-12">
          <label for="inputEmail" class="form-label">Email</label>
          <%= f.text_field :email, autofocus: true, autocomplete:"email", placeholder:"sample@example.com", class:'form form-control' %>
        </div>

        <div class="d-flex flex-row mt-1">
        <div class="col-6">
          <label for="inputPassword6" class="col-form-label">Password</label>
          <% if @minimum_password_length %>
          <% end %>
          <%= f.password_field :password, autofocus: true, autocomplete:"new-password", class:'form form-control' %>
          <span id="passwordHelpInline" class="form-text">
            Must be 6-20 characters long.
          </span>
        </div></div>

        <div class="d-flex flex-row mt-1">
          <div class="col-6">
            <label for="inputPassword6" class="col-form-label">Confilm Password</label>
            <%= f.password_field :password_confirmation, autofocus: true, autocomplete:"new-password", class:'form form-control' %>
            <span id="passwordHelpInline" class="form-text">
              Please enter your password again.
            </span>
          </div>
        </div>

        <div class="d-flex flex-row mt-1">
          <div class="col-12">
            <div class="form-check">
              <input class="form-check-input" type="checkbox" id="gridCheck">
              <label class="form-check-label" for="gridCheck">
                Check me out
              </label>
            </div>
          </div>
        </div>

        <div class="col-3">
           <%= f.submit "Sign up" ,class: '"btn btn-success btn-block btn-size"' %>
        </div>
      </form>

      <% end %>

      <div class="d-inline-block mx-3 mt-3 mb-2">
        <h4 class="px-3 font-weight-bold", style="background-color: #eaf4fc">Already registered user.</h4>
      </div>
      <p>Please log in from <%= link_to "here", new_user_session_path, class:"mx-3 mt-3 mb-2" %></p>
    </div>
  </div>
</div>