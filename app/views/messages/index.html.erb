<div class="container">
<!-- Jumbotron Header -->
  <header class="jumbotron my-4">
    <h1 class="display-3">Welcome　Contact　Us!</h1>
    <p class="lead">Here you can communicate your request to the administrator.Send us a message if you would like to add a category or anything else.</p>
    <p class="lead">Please feel free to write anything♪</p>
  </header>

  <!-- Comments Form -->
        <%= form_with model: @message, url: messages_path, local: true do |f| %>
        <%= render "users/shared/error_messages", resource: @message %>
        <div class="card my-4">
          <h5 class="card-header">Post a Message:</h5>
          <div class="contactcard-body">
            <form>
              <div class="form-group">
                <%= f.text_field :title, rows:'1', class: "form-control", placeholder: "Please write your purpose here" %>
              </div>
              <div class="form-group">
                <%= f.text_area :body, rows:'3', class: "form-control", placeholder: "Please write your details here" %>
              </div>
              <%= f.submit "Post", class: "btn btn-primary"  %>
            </form>
          </div>
        </div>
        <% end %>

  <!-- Page Features -->
 <%= render 'messages/input', messages: @messages %>
</div>